<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_gravity="center">
    
     <TextView android:id="@+id/txtHeader"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:text="Profile"
        android:background="#2ca6e9" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_gravity="center">

        <TableRow android:layout_marginTop="70dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="100dp"
                android:id="@+id/pfirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="100dp"
                android:id="@+id/plastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="100dp"
                android:id="@+id/pemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="100dp"
                android:id="@+id/pusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZipCode"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="100dp"
                android:id="@+id/pgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
        
        
         <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_marginLeft="100dp"
                android:id="@+id/zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

         <Button
             android:id="@+id/updateBt"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Update" />

    </TableLayout>

</LinearLayout>